@using System.Reflection;
@using WebApp.DTO;
@model List<ProductResponseDTO>;
@{ViewData["Title"]="Index";}

<a class="btn btn-primary" role="button" aria-disabled="true"
   asp-area="" asp-controller="Products" asp-action="Create">Primary link</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Details</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductResponseDTO product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td><a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id"
                       class="btn btn-primary" role="button" aria-disabled="true">Details</a>
                </td>
                <td><a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id"
                       class="btn btn-primary" role="button" aria-disabled="true">Edit</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@product.Id" method="post">
                        <input type="submit" class="btn btn-danger" value="Delete"/>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @if (int.Parse(TempData["PageNumber"].ToString()) > 1)
        {
            <li class="page-item"><a class="page-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-pageNumber="@{int.Parse(TempData["PageNumber"].ToString()) - 1}">Previous</a></li>
        }

        @if (int.Parse(TempData["PageNumber"].ToString()) > 6)
        {
            <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = 1 })">1</a></li>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>

        }

        @for (int i = Math.Max(1, int.Parse(TempData["PageNumber"].ToString()) - 5); i <= Math.Min(int.Parse(TempData["TotalPages"].ToString()), int.Parse(TempData["PageNumber"].ToString()) + 4); i++)
        {
            if (i == int.Parse(TempData["PageNumber"].ToString()))
            {
                <li class="page-item active"><a class="page-link" href="#">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a></li>
            }
        }

        @if (int.Parse(TempData["PageNumber"].ToString()) < int.Parse(TempData["TotalPages"].ToString()) - 5)
        {
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = Model.TotalPages })">@Model.TotalPages</a></li>
        }

        @if (int.Parse(TempData["PageNumber"].ToString()) < int.Parse(TempData["TotoalPages"].ToString()))
        {
            <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex + 1 })">Next</a></li>
        }
    </ul>
</nav>